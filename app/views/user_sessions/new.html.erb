<div class="auth-container">
  <h1>ログイン</h1>

  <%= form_with url: login_path, local: true, class: "auth-form" do |f| %>
    <div class="form-group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, class: 'form-input' %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, class: 'form-input' %>
    </div>

    <%= f.submit 'ログイン', class: 'auth-button' %>

    <div class="auth-links">
      <%= link_to '新規登録の方はこちら', signup_path %>
      <br>
      <%= link_to 'パスワードを忘れた方はこちら', '#' %>
    </div>
  <% end %>
</div>