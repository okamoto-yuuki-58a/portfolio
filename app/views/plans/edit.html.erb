<div data-controller="plan-edit" data-plan-id="<%= @plan.id %>">
  <div class="grid grid-cols-[1fr,400px] h-screen">
    <div class="relative">
      <div data-plan-edit-target="map" style="width: 100%; height: calc(100vh - 64px);"></div>
      <div class="absolute top-4 left-4 right-4 flex gap-2">
        <input type="text" data-plan-edit-target="searchBox" placeholder="検索" class="w-full bg-white shadow-lg p-2 rounded">
        <button data-action="click->plan-edit#addSpot" class="bg-green-500 hover:bg-green-600 text-white p-2 rounded">追加</button>
      </div>
    </div>

    <div class="p-4 border-l flex flex-col h-screen">
      <h2 class="text-xl font-bold mb-4">保存した場所</h2>
      <div data-plan-edit-target="spotsList" class="flex-1 space-y-2"></div>

      <div class="flex gap-2 mt-4">
        <button class="flex-1 bg-blue-500 hover:bg-blue-600 text-white p-2 rounded">ルート作成</button>
        <button class="flex-1 bg-gray-200 hover:bg-gray-300 p-2 rounded">チャット</button>
        <button data-action="click->plan-edit#savePlan" class="flex-1 bg-green-500 hover:bg-green-600 text-white p-2 rounded">保存</button>
      </div>
    </div>
  </div>
</div>