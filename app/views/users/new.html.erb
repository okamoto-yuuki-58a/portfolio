<div class="auth-container">
  <h1>新規登録</h1>

  <%= form_with model: @user, local: true, class: "auth-form" do |f| %>
    <% if @user.errors.any? %>
      <div class="error-messages">
        <h2><%= pluralize(@user.errors.count, "件") %>のエラーがあります：</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :username, 'ユーザー名' %>
      <%= f.text_field :username, class: 'form-input' %>
      <%= display_error(@user, :username) %>
    </div>

    <div class="form-group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, class: 'form-input' %>
      <%= display_error(@user, :email) %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, class: 'form-input' %>
      <%= display_error(@user, :password) %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'パスワード確認' %>
      <%= f.password_field :password_confirmation, class: 'form-input' %>
      <%= display_error(@user, :password_confirmation) %>
    </div>

    <div class="form-group checkbox-group">
      <%= f.check_box :terms_of_service, class: 'form-checkbox' %>
      <%= f.label :terms_of_service, '利用規約に同意する' %>
      <%= display_error(@user, :terms_of_service) %>
    </div>

    <div class="form-group checkbox-group">
      <%= f.check_box :privacy_policy, class: 'form-checkbox' %>
      <%= f.label :privacy_policy, 'プライバシーポリシーに同意する' %>
      <%= display_error(@user, :privacy_policy) %>
    </div>

    <%= f.submit '新規登録', class: 'auth-button' %>
  <% end %>
</div>